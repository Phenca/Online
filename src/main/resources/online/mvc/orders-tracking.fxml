<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="online.mvc.Controller">
    <children>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Suivi de vos commandes"/>
                <TableView fx:id="ordersTable" prefHeight="300.0" prefWidth="550.0">
                    <columns>
                        <TableColumn fx:id="colOrderId" prefWidth="100.0" text="ID Commande">
                            <cellValueFactory>
                                <PropertyValueFactory property="id" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colCustomerName" prefWidth="100.0" text="Client">
                            <cellValueFactory>
                                <PropertyValueFactory property="customerName" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colEMOTName" prefWidth="100.0" text="EMOT">
                            <cellValueFactory>
                                <PropertyValueFactory property="emotName" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colTotalPrice" prefWidth="100.0" text="Prix Total (€)">
                            <cellValueFactory>
                                <PropertyValueFactory property="totalPrice" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colOrderState" prefWidth="100.0" text="État">
                            <cellValueFactory>
                                <PropertyValueFactory property="orderState" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colTrackingNumber" prefWidth="150.0" text="N° Suivi">
                            <cellValueFactory>
                                <PropertyValueFactory property="trackingNumber" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
                <Button mnemonicParsing="false" onAction="#back_to_menu" text="Retour au menu" />
            </children>
        </VBox>
    </children>
</AnchorPane>
